<UserControl x:Class="WpfEmbedWinForm.UserControl1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:s="clr-namespace:System;assembly=mscorlib"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfEmbedWinForm"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="Yellow">
        <ItemsControl ItemsSource="{Binding}">
            <ItemsControl.DataContext>
                <x:Array Type="{x:Type s:Int32}">
                    <s:Int32>0</s:Int32>
                </x:Array>
            </ItemsControl.DataContext>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <local:CustomWindowsFormsHost Width="200" Height="150">
                        <local:CustomWindowsFormsHost.Child>
                            <local:WinFormControl1/>
                        </local:CustomWindowsFormsHost.Child>
                    </local:CustomWindowsFormsHost>
                    <!--<TextBlock Background="White" Text="{Binding}"></TextBlock>-->
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Grid>
</UserControl>
